<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_A2_2016240"
    android:orientation="vertical">

    <fragment
        android:id="@+id/frag_songView"
        android:name="com.development.lakshya.musicplayer.FragmentSongView_A2_2016240"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/iv_playSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_song"
            android:background="#00000000"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/iv_pauseSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pause_song"
            android:background="#00000000"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/iv_previousSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_song"
            android:background="#00000000"
            android:layout_toLeftOf="@id/iv_playSong"/>

        <ImageButton
            android:id="@+id/iv_nextSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_song"
            android:background="#00000000"
            android:layout_toRightOf="@id/iv_playSong"/>

        <ImageButton
            android:id="@+id/iv_downloadSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download_song"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>



</LinearLayout>